/*}*/

/*素材*/
.material-edit-btn {
    position: absolute;
    right: 0;
    top: 0;
    padding-top: 15px;
    padding-right: 10px;
}

.material-edit-btn span {
    margin-right: 15px;
    cursor: pointer;
}

#materialTabContent img {
    float: left;
    width: 60px;
    height: 60px;
    margin-left: 10px;
    margin-bottom: 10px;
    border: 1px solid white;
}

#materialTabContent img:hover {
    border: 1px solid red;
}

#materialTabContent {
    width: 100%;
    height: 80%;
    overflow: auto;
    padding-top: 10px;
}

/*动画素材*/
.material_animate {
    width: 50px;
    height: 50px;
    border: 1px solid gray;
    background-color: #eeeeee;
}

.material_animate img {
    width: 100%;
    height: 100%;
}

/*动画选素材时，点击触发选中特效*/
.m_a_active {
    border: 2px solid red !important;
}

#animate_edit {
    padding: 10px;
}

.date_picker_icon {
    position: relative;
}

.date_picker_icon i {
    position: absolute;
    bottom: 10px;
    right: 24px;
    top: auto;
    cursor: pointer;
}

.layui-layer-content #static_material_setting {
    padding-top: 20px;
    padding-right: 20px;
    -moz-user-select: none;
}

#static_material_setting .form-group {
    margin-top: 15px;
}

/*展示屏位置示意样式*/
#screen {
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: 0;
    background-size: 100% 100%;
    background-repeat: no-repeat;
}

#screen .play_area {
    position: absolute;
    width: 80%;
    height: 80%;
    left: 0;
    right: 0;
    top: 1%;
    margin: auto;
    background-color: lightgreen;
}

#screen .screen_title {
    position: absolute;
    width: 5em;
    height: 1em;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    margin: auto;
}

#screen .down_area {
    width: 100%;
    height: 19%;
    position: absolute;
    left: 0;
    bottom: 0;
    border: 1px solid #aaa;
}

#self_material_page, #center_material_page {
    position: absolute;
    left: 0;
    bottom: 0;
}

/*确认应用按钮*/
#ok_end_btn{
    position: absolute;
    bottom: 10px;
    right: 30px;
}

/*有效时间设定按钮*/
#validTimeSetting_btn{
    margin-bottom: 10px;
}